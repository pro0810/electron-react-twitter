{
  "name": "nocturn",
  "version": "0.2.0",
  "main": "app/main.js",
  "repository": "k0kubun/nocturn",
  "author": "k0kubun",
  "license": "MIT",
  "scripts": {
    "start": "npm run compile && electron .",
    "setup": "gulp bower",
    "compile": "rm -rf app && gulp compile",
    "build": "rm -rf packages && npm run package && npm run zip",
    "package": "electron-packager . Nocturn --arch=x64 --out=packages/v0.2.0 --platform=darwin,linux,win32 --version=0.33.3 --ignore=.DS_Store --ignore=accounts.json --ignore=packages/* --ignore=node_modules/bower --ignore=node_modules/electron-prebuilt --ignore=node_modules/electron-packager --ignore=node_modules/gulp --ignore=node_modules/gulp-bower --ignore=node_modules/gulp-haml --ignore=node_modules/gulp-ruby-sass",
    "upload": "(which ghr > /dev/null || go get github.com/tcnksm/ghr) && ghr -u k0kubun -r Nocturn v0.2.0 packages/v0.2.0",
    "release": "npm run build && npm run upload",
    "zip": "npm run zip-darwin && npm run zip-linux && npm run zip-win32",
    "zip-darwin": "cd packages/v0.2.0 && zip -r Nocturn-darwin-x64.zip Nocturn-darwin-x64",
    "zip-linux": "cd packages/v0.2.0 && zip -r Nocturn-linux-x64.zip Nocturn-linux-x64",
    "zip-win32": "cd packages/v0.2.0 && zip -r Nocturn-win32-x64.zip Nocturn-win32-x64",
    "decaf": "node decaf.js"
  },
  "dependencies": {
    "autolinker": "^0.19.0",
    "jquery": "^2.1.4",
    "node-twitter-api": "^1.6.0",
    "twitter": "^1.2.5"
  },
  "devDependencies": {
    "bower": "^1.5.2",
    "electron-prebuilt": "^0.33.3",
    "electron-packager": "^5.1.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-bower": "^0.0.10",
    "gulp-haml": "^0.1.6",
    "gulp-ruby-sass": "^1.3.0",
    "decafjs": "^0.3.1",
    "glob": "^7.0.0"
  }
}
